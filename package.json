{
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"scripts": {
		"start": "pnpm icons",
		"build": "pnpm icons:build",
		"icons": "pnpm --filter @radix-ui/react-icons watch",
		"icons:build": "pnpm --filter @radix-ui/react-icons build",
		"icons:generate": "pnpm --filter @radix-ui/react-icons generate-src",
		"prettier": "prettier './**/*.{js,jsx,ts,tsx,json,yml,yaml,css,md,mdx}' --write",
		"lint": "eslint './packages/**/*.{js,jsx,ts,tsx}'",
		"clean": "pnpm run clean-logs && pnpm run clean-modules",
		"clean-logs": "rimraf ./packages/*/npm-debug* && rimraf ./*-debug*",
		"clean-modules": "rimraf ./packages/*/node_modules/ && rimraf ./node_modules/",
		"release": "pnpm publish"
	},
	"dependencies": {
		"@chance/eslint": "^1.1.0",
		"eslint": "^9.35.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"*.{md,mdx,json}": [
			"prettier --write",
			"git add"
		]
	}
}
